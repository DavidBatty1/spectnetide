<tools:SpectrumToolWindowControlBase
             x:Class="Spect.Net.VsPackage.Tools.BasicList.BasicListToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:tools="clr-namespace:Spect.Net.VsPackage.Tools"
             xmlns:local="clr-namespace:Spect.Net.VsPackage.Tools.BasicList" 
             mc:Ignorable="d" 
             Background="{DynamicResource BToolBackground}"
             d:DesignHeight="300" d:DesignWidth="300" 
             d:DataContext="{d:DesignInstance {x:Type local:BasicListToolWindowViewModel}, IsDesignTimeCreatable=True}">

    <tools:SpectrumToolWindowControlBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\..\PackageStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </tools:SpectrumToolWindowControlBase.Resources>

    <Grid>
        <local:BasicListControl DataContext="{Binding List}"/>
    </Grid>
</tools:SpectrumToolWindowControlBase>
